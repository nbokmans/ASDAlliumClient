<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/message_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="end"
    android:layout_marginBottom="@dimen/message_margin_vertical"
    android:layout_marginLeft="@dimen/message_margin_horizontal"
    android:layout_marginRight="@dimen/message_margin_horizontal"
    android:layout_marginTop="@dimen/message_margin_vertical"
    android:background="@drawable/message_own_background"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/message_padding_vertical"
    android:paddingLeft="@dimen/message_padding_horizontal"
    android:paddingRight="2dp"
    android:paddingTop="@dimen/message_padding_vertical">

    <TextView
        android:id="@+id/messageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left|center_vertical"
        android:minHeight="48dp"
        android:text="Hello world"
        android:textColor="@color/messageTextColor"
        android:textSize="@dimen/message_font_size" />

    <TextView
        android:id="@+id/messageTime"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:textColor="@color/messageTextColor"
        android:paddingStart="5dp"
        android:text="42:42"
        android:layout_gravity="bottom|right"
        android:gravity="bottom"/>
    <ImageView
        android:id="@+id/messageConfirmImage"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="bottom|right"
        android:gravity="bottom"
        android:src="@drawable/ic_onion_512"
        />
</LinearLayout>